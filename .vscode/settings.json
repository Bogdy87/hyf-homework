{
  "workbench.colorTheme": "Your-Preferred-Theme",
  "editor.fontSize": 16,
  "editor.fontFamily": "'Consolas', 'Menlo', 'Monaco', 'Courier New', monospace",
  "editor.lineHeight": 24,
  "editor.letterSpacing": 0.5,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.detectIndentation": false,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "none",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "top",
  "editor.cursorSurroundingLines": 5,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.minimap.enabled": false,
  "files.autoSave": "onWindowChange",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 3,
  "terminal.integrated.fontFamily": "'Operator Mono', 'Fira Code', 'Droid Sans Mono', 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.blame.line.enabled": false,
  "gitlens.mode.statusBar.enabled": false,
  "gitlens.mode.statusBar.alignment": "left",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "editor.guides.indentation": true
}
